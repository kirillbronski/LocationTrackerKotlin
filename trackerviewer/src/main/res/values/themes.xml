<resources>
    <!-- Base application theme. -->
    <style name="Theme.LocationTrackerKotlin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorV</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColorV</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorV</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColorV</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primaryDarkColorV</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.LocationTrackerKotlin.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_alt_24_1</item>
        <item name="postSplashScreenTheme">@style/Theme.LocationTrackerKotlin</item>
    </style>
</resources>